{
  "manifest_version": 2,
  "name": "CSSAntique",
  "version": "0.1.4",
  "default_locale": "en",
  "description": "Emulate older browsers by disabling some CSS rules support",
  "author": "Henri Bourcereau",
  "homepage_url": "https://github.com/mmai/cssantique-chrome",
  "permissions": [ "<all_urls>", "tabs", "activeTab" ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [ "images/*.png"],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/cssantique-content.css"]
    }
  ],
  "devtools_page": "devtools.html"
}
